    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/tv2"
        android:layout_below="@id/tv1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />


    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI:"
        android:textColor="#000000"
        android:layout_alignLeft="@id/tv1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_below="@id/tv2"
        />

    <TextView
        android:id="@+id/bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@id/name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />


    <TextView
        android:id="@+id/edit_diseases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Edit_diseases"
        android:layout_below="@id/bmi"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@id/tv3"
        />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_diseases"
        android:text="DISEASES:"
        android:layout_marginTop="0dp"
        android:layout_alignLeft="@id/tv3"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/diseases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv4"
        android:layout_marginLeft="25dp"
        android:layout_alignTop="@id/tv4"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />


    <TextView
        android:id="@+id/edit_allergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Edit_allergy"
        android:layout_below="@id/diseases"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@id/tv3"

        />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_allergy"
        android:text="ALLERGIES:"
        android:layout_marginTop="0dp"
        android:layout_alignLeft="@id/tv4"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/allergies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv5"
        android:layout_marginLeft="25dp"
        android:layout_alignTop="@id/tv5"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMR:"
        android:layout_alignLeft="@id/tv4"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/tv5"
        />

    <TextView
        android:id="@+id/bmr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv6"
        android:layout_marginLeft="25dp"
        android:layout_alignTop="@id/tv6"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />

</RelativeLayout>
