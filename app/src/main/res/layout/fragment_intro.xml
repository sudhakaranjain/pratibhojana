<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sudhakaran.pratibhojana.activity.IntroFragment">

    <ImageView
        android:id="@+id/arrow"
        android:src="@drawable/arrow"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/arrow"
        android:textStyle="italic"
        android:textColor="@color/Black"
        android:layout_marginLeft="2dp"
        android:textSize="15dp"
        android:text="@string/click"
    />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_below="@id/arrow"
        android:layout_marginTop="15dp"
        android:textColor="@color/Black"
        android:text="Did you know the most popular snack food is potato chips"
    />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:textColor="@color/Black"
        android:text="But, a potato has no more calories than an apple"
        />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:textColor="@color/Black"
        android:text="Also, did you know an egg contains every Vitamin, except Vitamin C"
        />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv3"
        android:layout_marginTop="15dp"
        android:textStyle="italic"
        android:textColor="@color/Black"
        android:text="Like these, there are many other nutrition facts that you are unaware about"
        />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv4"
        android:textStyle="italic|bold"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/Black"
        android:text="''The groundwork for all happiness is good health''"
        />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv5"
        android:layout_marginTop="5dp"
        android:textStyle="italic"
        android:textColor="@color/Black"
        android:text="And it all begins with a healthy lifestyle"
        />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv6"
        android:layout_marginTop="5dp"
        android:textStyle="italic"
        android:textColor="@color/Black"
        android:text="So we are here to help you with it!"
        />

    <TextView
        android:id="@+id/tv8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv7"
        android:layout_marginTop="15dp"
        android:textStyle="italic"
        android:textColor="@color/Black"
        android:text="Let's start by helping you improve your diet"
        />

    <TextView
        android:id="@+id/tv9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv8"
        android:layout_marginTop="15dp"
        android:textStyle="italic"
        android:textColor="@color/Black"
        android:text="Welcome to Pratibhojana! Your personalised alarm supported diet recommender"
        />

</RelativeLayout>
