<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".diseases">

    <TextView
        android:id="@+id/diseasetv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/Black"
        android:text="Please select a disease/s if any from the below mentioned list:"
        />

    <CheckBox
        android:id="@+id/anemia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/diseasetv"
        android:text="Anemia"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        />
    <Spinner
        android:id="@+id/s_anemia"
        android:layout_alignTop="@id/anemia"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_width="140dp"
        android:textSize="10dp"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground" >
    </Spinner>

    <CheckBox
        android:id="@+id/diabetes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Diabetes"
        android:textSize="15dp"
        android:layout_below="@id/anemia"
        />

    <Spinner
        android:id="@+id/s_diabetes"
        android:layout_alignTop="@id/diabetes"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:textSize="10dp"
        android:layout_width="140dp"
        android:background="@color/windowBackground"
        android:layout_height="wrap_content">
    </Spinner>

    <CheckBox
        android:id="@+id/thyroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Thyroid"
        android:textSize="15dp"
        android:layout_below="@+id/diabetes"
        />

    <Spinner
        android:id="@+id/s_thyroid"
        android:layout_alignTop="@id/thyroid"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:textSize="10dp"
        android:layout_width="140dp"
        android:background="@color/windowBackground"
        android:layout_height="wrap_content">
    </Spinner>

    <CheckBox
        android:id="@+id/cholesterol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Cholesterol"
        android:textSize="15dp"
        android:layout_below="@id/thyroid" />

    <Spinner
        android:id="@+id/s_cholesterol"
        android:layout_alignTop="@id/cholesterol"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:textSize="10dp"
        android:layout_width="140dp"
        android:background="@color/windowBackground"
        android:layout_height="wrap_content">
    </Spinner>

    <CheckBox
        android:id="@+id/bp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Blood Pressure"
        android:textSize="15dp"
        android:layout_below="@id/cholesterol"/>

    <Spinner
        android:id="@+id/s_bp"
        android:layout_alignTop="@id/bp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:textSize="10dp"
        android:layout_width="140dp"
        android:background="@color/windowBackground"
        android:layout_height="wrap_content">
    </Spinner>

    <CheckBox
        android:id="@+id/osteoarthritis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Osteoarthritis"
        android:textSize="15dp"
        android:layout_below="@+id/bp"
        />

    <CheckBox
        android:id="@+id/not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="None of these"
        android:textSize="15dp"
        android:layout_below="@id/osteoarthritis"
        />

