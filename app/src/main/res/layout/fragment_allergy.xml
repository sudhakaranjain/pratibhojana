<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".allergies">


    <TextView
        android:id="@+id/allergytv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/Black"
        android:text="Please select an allergy/ies if any from the below mentioned list:"
        />

    <CheckBox
        android:id="@+id/seafood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/allergytv"
        android:text="Sea Food"
        android:layout_marginTop="30dp"
        android:textSize="15dp"

        />

    <CheckBox
        android:id="@+id/nuts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuts"
        android:layout_marginTop="10dp"
        android:layout_below="@id/seafood"
        android:textSize="15dp"

        />

    <CheckBox
        android:id="@+id/milk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milk"
        android:textSize="15dp"
        android:layout_below="@id/nuts"
        android:layout_marginTop="10dp"
        />

    <CheckBox
        android:id="@+id/acidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acidity"
        android:textSize="15dp"
        android:layout_below="@id/milk"
        android:layout_marginTop="10dp"
        />

    <CheckBox
        android:id="@+id/not"
        android:layout_below="@id/acidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None of these"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />


    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:background="@color/windowBackground"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
